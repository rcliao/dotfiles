# Path to your oh-my-zsh installation.
export ZSH=~/.oh-my-zsh

# homebrew
eval $(/opt/homebrew/bin/brew shellenv)

export EDITOR=nvim

# Zsh theme
# eval "$(starship init zsh)"
fpath+=("$(brew --prefix)/share/zsh/site-functions")
autoload -U promptinit; promptinit
prompt pure

plugins=(
  vi-mode
)

# source $ZSH/oh-my-zsh.sh

# Go Settings
export GOPATH="$HOME/dev/go"
export PATH=$PATH:$GOPATH/bin

# custom installed binary
export PATH=$PATH:~/bin

# Java & Gradle Settings
if [[ ! -a /usr/libexec/java_home ]]; then
    export JAVA_HOME=$(/usr/libexec/java_home)
fi

# fzf settings â€“ enables fuzzy search with "**" like `nvim **`
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
# Set up fzf key bindings and fuzzy completion
eval "$(fzf --zsh)"
# use fd as default find command to traverse the file system while respecting .gitignore
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'

# for gpg
export GPG_TTY=$(tty)

# rust-lang cargo env
export PATH="$HOME/.cargo/bin:$PATH"

# aws CLI
export PATH=$PATH:/usr/local/bin

# claude code
export PATH="$HOME/.local/bin:$PATH"

# Load up ssh keys
ssh-add -A &> /dev/null

# jump for easier dir traversal
if [ -x "$(command -v jump)" ]; then
    eval "$(jump shell)"
fi
if [ -x "$(command -v zoxide)" ]; then
    eval "$(zoxide init zsh)"
fi
